{
    "Jwt": {
        "Authority": "https://YOUR-IDP/",
        "Audience": "your-api-audience",
        "ScopeClaimType": "scope"
    },
    "Mongo": {
        "ConnectionString": "mongodb://localhost:27017",
        "Database": "mydb",
        "MaxQueryMilliseconds": 2000
    },
    "QueryGateway": {
        "Enabled": true,
        "Global": {
            "DefaultMaxLimit": 200,
            "MaxFilterDepth": 6,
            "MaxPredicates": 50,
            "MaxQueryCost": 50
        },
        "Collections": {
            "Billing": {
                "CollectionName": "billing",
                "RequiredScopes": [
                    "canReadBilling"
                ],
                "AllowedFields": [
                    "_id",
                    "invoiceNo",
                    "customerId",
                    "amount",
                    "currency",
                    "status",
                    "createdAt"
                ],
                "AllowedOperators": [
                    "eq",
                    "ne",
                    "in",
                    "nin",
                    "gt",
                    "gte",
                    "lt",
                    "lte",
                    "contains",
                    "startsWith"
                ],
                "MaxLimit": 200,
                "DefaultSort": [
                    {
                        "Field": "createdAt",
                        "Dir": "desc"
                    }
                ]
            },
            "Metadata": {
                "CollectionName": "metadata",
                "RequiredScopes": [
                    "canReadMetadata"
                ],
                "AllowedFields": [
                    "_id",
                    "key",
                    "value",
                    "category",
                    "updatedAt"
                ],
                "AllowedOperators": [
                    "eq",
                    "ne",
                    "contains",
                    "startsWith",
                    "in",
                    "nin"
                ],
                "MaxLimit": 200,
                "DefaultSort": [
                    {
                        "Field": "updatedAt",
                        "Dir": "desc"
                    }
                ]
            }
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    }
}