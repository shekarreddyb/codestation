/* 
  Bootstrap 5 Accent-First Theme (Plain CSS, No SCSS)
  - Indigo for links (NOT for btn-primary)
  - Default buttons are grayscale (btn-primary -> neutral gray)
  - CTA red via .btn-cta-red
  - Corporate radii: square globally, tiny rounding for buttons & inputs
*/

/* ------------------------------------------
   Brand palette as custom properties
-------------------------------------------*/
:root {
  /* Brand */
  --brand-red:        #D71E28;
  --brand-yellow:     #FFCD41;
  --brand-yellow-1:   #FFDC78;
  --brand-yellow-2:   #FFE6A0; /* corrected from FFE6AO */
  --brand-yellow-3:   #FFF0CB;
  --brand-yellow-4:   #FFF7E2;

  --green-light:      #49B876;
  --green-dark-1:     #178757;
  --green-dark-2:     #007545;

  --orange-light:     #FF9657;
  --orange-dark:      #A93E00;

  --coral-light:      #FF755E;
  --coral-dark-1:     #D73F26;
  --coral-dark-2:     #BF2D19;

  --indigo-light:     #9A89D9;
  --indigo-dark:      #5A469B;

  --gray-lite:        #F9F7F6;
  --gray:             #E2DEDE;
  --gray-dark:        #9C9191;
  --gray-1:           #3B3331;
  --gray-2:           #787070;
  --gray-3:           #B5ADAD;
  --gray-4:           #F4F0ED;

  --white:            #FFFFFF;
  --black:            #141414;

  /* ------------------------------------------
     Bootstrap root theming via CSS vars
     (works without SCSS in Bootstrap 5.2/5.3+)
  -------------------------------------------*/
  /* Body */
  --bs-body-bg:       var(--white);
  --bs-body-color:    var(--gray-1);

  /* Theme colors */
  /* Make primary neutral gray for default buttons */
  --bs-primary:       var(--gray-1);
  --bs-secondary:     var(--gray-2);
  --bs-success:       var(--green-dark-1); /* confirmations */
  --bs-info:          var(--indigo-light);
  --bs-warning:       var(--orange-light); /* alerts */
  --bs-danger:        var(--coral-dark-1); /* errors */
  --bs-light:         var(--gray-lite);
  --bs-dark:          var(--gray-1);

  /* Links use Indigo explicitly (decoupled from --bs-primary) */
  --bs-link-color:            var(--indigo-dark);
  --bs-link-hover-color:      color-mix(in srgb, var(--indigo-dark) 80%, var(--black) 20%);

  /* Borders & focus */
  --bs-border-color:          var(--gray);
  --bs-focus-ring-color:      color-mix(in srgb, var(--brand-yellow) 35%, transparent);

  /* Typography */
  --bs-heading-color:         var(--black);

  /* Radii â€” corporate flat by default */
  --bs-border-radius:         0;
  --bs-border-radius-sm:      0;
  --bs-border-radius-lg:      0;
  --bs-border-radius-xl:      0;
  --bs-border-radius-xxl:     0;
}

/* ------------------------------------------
   Component-specific radii (tiny rounding where desired)
-------------------------------------------*/

/* Buttons: keep small rounding */
.btn {
  --bs-btn-border-radius: .2rem;
  --bs-btn-padding-y: .55rem;
  --bs-btn-padding-x: 1rem;
  --bs-btn-font-weight: 600;
  transition: all .15s ease-in-out;
}
.btn:hover { transform: translateY(-1px); }

/* Inputs & selects: small rounding + brand-yellow focus halo */
.form-control,
.form-select,
.input-group .form-control,
.input-group .form-select {
  --bs-border-radius: .2rem; /* local component override */
  border-radius: var(--bs-border-radius);
  border-color: var(--bs-border-color);
}
.form-control:focus,
.form-select:focus {
  box-shadow: 0 0 0 .25rem color-mix(in srgb, var(--brand-yellow) 25%, transparent);
  border-color: color-mix(in srgb, var(--brand-yellow) 40%, var(--bs-border-color));
}

/* Cards, alerts, modals, dropdowns, tooltips: square */
.card,
.alert,
.modal-content,
.dropdown-menu,
.tooltip .tooltip-inner,
.popover {
  --bs-border-radius: 0 !important;
  border-radius: 0 !important;
}

/* Tables & hr */
.table { --bs-table-border-color: var(--gray); }
.hr-soft {
  border: 0;
  border-top: 1px solid var(--gray);
  opacity: 1;
}

